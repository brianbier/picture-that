<div class='container'>
  <% if @errors %>
  <h4 class="error">Please fix the following errors:</h4>
  <ul class="error">
    <li><%= @errors %></li>
  </ul>
  <% end %>
</div>

<div class="login">
  <div class="container">
    <h2 class='heading'>Login</h2>
    <div class="row">
      <div class="col-md-12">
        <%= form_for(:session, url: login_path)  do |f| %>
        <%= f.email_field :email, :placeholder => "Email", :class => "userinfo" %>   <%= f.text_field :email %> <br />
        <%= f.password_field :password, :placeholder => "Password", :class => "userinfo" %> 
        <%= f.submit "Log in", class: "submit_btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>